#!/usr/bin/env bash
# Install Nginx web server
new="rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;"
sudo apt-get -y update
sudo apt-get -y install nginx
sudo ufw allow 'Nginx HTTP'
sudo echo "Holberton School" > /var/www/html/index.html
sudo sed -i "listen 80 default_server;i\a $new" /etc/nginx/sites-available/default
sudo service nginx restart
